@model KallSonys_B2C_v1._1.Models.RegisterViewModel
<div class="content-user">
    @{
        ViewBag.Title = "Registrarse";
    }

    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div>
            @Html.Label("Correo electrónico", new { @class = "label-user" })
            <div>
                @Html.TextBoxFor(m => m.Email, new { @class = "input-user" })
            </div>
        </div>
        <div class="marginTop">
            @Html.Label("Contraseña", new { @class = "label-user" })
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "input-user" })
            </div>
        </div>
        <div class="marginTop">
            @Html.Label("Confirmar Contraseña", new { @class = "label-user" })
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-user" })
            </div>
        </div>
        <div class="submit">
            <div class="">
                <input type="submit" class="btn-submit" value="Registrarse" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
